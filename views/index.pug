extends layout.pug

block content
	div.container-fluid
		div.row-fluid
			div.span2
				h3 Add Tickets
				button(class=btn class=13 onclick="addTicket(13)") 13
				button(class=btn class=109 onclick="addTicket(209)") 209
				button(class=btn class=255 onclick="addTicket(255)") 255
			div.span10
				div.totalTickets
		div.row-fluid
			div.span2
				h3 Draw A Ticket
				button.btn.btn-primary#pullNumber Pick a Ticket
				ul.pickedNumbers
			div.span10
				button.btn.btn-primary.btn-large.btn-block.pickedNumber#pickedNumber
