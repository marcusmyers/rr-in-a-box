extends layout.pug

block content
	div.container-fluid
		div.row-fluid
			div.span2
				h3 Add Ticket
				button.btn-sm.border-b-4.border-grey-dark.mr-2(class=13 onclick="addTicket(13)") 13
				button.btn-sm.border-b-4.border-grey-dark.mr-2(class=129 onclick="addTicket(129)") 129
				button.btn-sm.border-b-4.border-grey-dark.mr-2(class=254 onclick="addTicket(254)") 254
			div.span10
				div.totalTickets
		div.row-fluid
			div.span2
				h3 Draw A Ticket
				button.btn.btn-primary#pullNumber Pick a Ticket
				ol.pickedNumbers
			div.span10
				button.btn.btn-primary.btn-large.btn-block.pickedNumber#pickedNumber
